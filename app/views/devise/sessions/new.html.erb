<div class="flex flex-col items-center w-full min-h-screen bg-gray-100">
  <h1 class="text-3xl font-bold text-blue-700 mb-8 mt-12 text-center">Log in</h1>

  <div class="w-full max-w-md bg-white shadow-md rounded-lg p-8">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "block font-semibold mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border rounded px-3 py-2" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block font-semibold mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full border rounded px-3 py-2" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "font-semibold" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "w-full bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded font-semibold" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
