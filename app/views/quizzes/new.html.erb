<% content_for :title, "New quiz" %>
<div class="flex flex-col items-center w-full">
  <h1 class="text-2xl font-bold mb-6 text-green-700">Create a New Quiz</h1>
  <div class="w-full max-w-xl">
    <%= form_with model: @quiz, local: true, class: "space-y-6" do |f| %>
      <div>
        <%= f.label :title, class: "block mb-2" %>
        <%= f.text_field :title, class: "w-full border rounded px-3 py-2" %>
      </div>
      <div>
        <%= f.label :description, class: "block mb-2" %>
        <%= f.text_area :description, class: "w-full border rounded px-3 py-2" %>
      </div>
      <%= f.submit "Create Quiz", class: "bg-green-600 text-white px-4 py-2 rounded" %>
    <% end %>
  </div>
  <div class="mt-8">
    <%= link_to "Back to quizzes", quizzes_path, class: "bg-green-600 text-white px-4 py-2 rounded" %>
  </div>
</div>
