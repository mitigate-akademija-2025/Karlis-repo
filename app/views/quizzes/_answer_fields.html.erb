<div class="mb-4 border rounded p-4 bg-white shadow">
  <%= f.label :text, "Answer", class: "block mb-2" %>
  <%= f.text_field :text, class: "w-full border rounded px-3 py-2 mb-2" %>
  <%= f.label :correct, "Correct?", class: "block mb-2" %>
  <%= f.check_box :correct, class: "mr-2" %>
  <%= link_to_remove_association "Remove Answer", f, class: "bg-red-500 text-white px-3 py-1 rounded ml-2" %>
</div>