<%= form_with(model: quiz) do |form| %>
  <% if quiz.errors.any? %>
    <div class="mb-4 text-red-600">
      <h2 class="font-bold"><%= pluralize(quiz.errors.count, "error") %> prohibited this quiz from being saved:</h2>
      <ul class="list-disc list-inside">
        <% quiz.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: "block font-semibold mb-1" %>
    <%= form.text_field :title, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block font-semibold mb-1" %>
    <%= form.text_area :description, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div id="questions-list">
    <%= form.fields_for :questions do |question_form| %>
      <%= render 'question_fields', f: question_form %>
    <% end %>
    <%= link_to_add_association 'Add Question', form, :questions, class: "bg-green-600 text-white px-4 py-2 rounded" %>
  </div>

  <div>
    <%= form.submit class: "bg-blue-600 text-white px-4 py-2 rounded" %>
  </div>
<% end %>
