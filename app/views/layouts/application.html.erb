<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Karlis Repo" %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body class="bg-gray-50 min-h-screen">
    <nav class="bg-white shadow mb-8">
      <div class="container mx-auto px-4 py-4 flex justify-between items-center">
        <a href="/" class="text-2xl font-bold text-blue-700">QuizApp</a>
        <div class="flex space-x-6">
          <% if user_signed_in? && current_user %>
            <%= link_to "My Profile", profile_path, class: "text-gray-700 hover:text-blue-600 font-semibold" %>
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "text-red-600 hover:text-red-800 font-semibold" %>
          <% else %>
            <%= link_to "Sign In", new_user_session_path, class: "text-blue-600 hover:text-blue-800 font-semibold" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "text-green-600 hover:text-green-800 font-semibold" %>
          <% end %>
        </div>
      </div>
    </nav>
    <div class="container mx-auto px-4 py-8">
      <%= yield %>
    </div>
  </body>
</html>
