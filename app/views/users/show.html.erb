<div class="max-w-2xl mx-auto bg-white shadow-md rounded-lg p-8 mt-8">
  <h1 class="text-3xl font-bold mb-6 text-gray-800"><%= @user.username %>'s Profile</h1>

  <div class="mb-8">
    <h2 class="text-xl font-semibold mb-2 text-gray-700">Quizzes Created</h2>
    <ul class="list-disc pl-6">
      <% @quizzes.each do |quiz| %>
        <li class="mb-1">
          <%= link_to quiz.title, quiz_path(quiz), class: "text-blue-600 hover:underline" %>
        </li>
      <% end %>
      <% if @quizzes.empty? %>
        <li class="text-gray-500">No quizzes created yet.</li>
      <% end %>
    </ul>
  </div>

  <div>
    <h2 class="text-xl font-semibold mb-2 text-gray-700">Recently Completed Quizzes</h2>
    <ul class="list-disc pl-6">
      <% if @recent_completed_quizzes.any? %>
        <% @recent_completed_quizzes.each do |quiz| %>
          <li class="mb-1">
            <%= link_to quiz.title, quiz_path(quiz), class: "text-green-600 hover:underline" %>
          </li>
        <% end %>
      <% else %>
        <li class="text-gray-500">No completed quizzes found.</li>
      <% end %>
    </ul>
  </div>
</div>